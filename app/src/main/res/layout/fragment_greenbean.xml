<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_greenbean"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_bean_pic"
        tools:layout_editor_absoluteX="102dp" />

    <TextView
        android:id="@+id/greenbeantitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green Bean"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image_greenbean"
        tools:layout_editor_absoluteX="265dp" />

    <TextView
        android:id="@+id/greenbeanhours1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday - Thursday: 7:30 am - 12 am"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/greenbeantitle_text"
        tools:layout_editor_absoluteX="176dp" />

    <TextView
        android:id="@+id/greenbeanhours2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday: 7:30 am - 4:00 pm"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/greenbeanhours1_text"
        tools:layout_editor_absoluteX="161dp" />

    <TextView
        android:id="@+id/greenbeanhours3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday: 9 am - 4 pm"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/greenbeanhours2_text"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:id="@+id/greenbeanhours4_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday: 10:00 am - 12:00 am"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/greenbeanhours3_text"
        tools:layout_editor_absoluteX="95dp" />

    <TextView
        android:id="@+id/greenbeanprice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Fee: $1.00"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/greenbeanhours4_text"
        tools:layout_editor_absoluteX="192dp" />

    <ListView
        android:id="@+id/greenbeanitems_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/greenbeanprice_text"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>