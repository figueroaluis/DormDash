<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/menu_option_main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/menu_option_text_container"
        android:layout_width="375dp"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/menu_option_item_name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="Menu Item" />

        <TextView
            android:id="@+id/menu_option_item_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="26dp"
            android:text="Breakfast/Lunch/Dinner" />

    </RelativeLayout>


    <CheckBox
        android:id="@+id/menu_option_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/menu_option_text_container"
        android:buttonTint="@color/orangeProto"
        />
</RelativeLayout>