<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/market_place_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"

        android:src="@drawable/market_place_pic"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Marketplace"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/market_place_image" />

    <TextView
        android:id="@+id/hour1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday - Friday: 7:30 am - 7:30 pm"

        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <TextView
        android:id="@+id/hour2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday 10am - 2pm"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/hour1_text" />

    <TextView
        android:id="@+id/hour3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday and Holidays 10am - 7:30pm"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/hour2_text" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Fee: $1.00"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/hour3_text" />
    <ListView
        android:id="@+id/items_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/price_text"
        />





</android.support.constraint.ConstraintLayout>