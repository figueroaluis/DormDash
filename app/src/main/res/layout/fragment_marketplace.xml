<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/market_place_image"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/market_place_pic" />

    <RelativeLayout
        android:id="@+id/mp_text_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/market_place_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="The Marketplace"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title_text"
                android:text="Monday - Friday: 7:30 am - 7:30 pm"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/hour1_text"
                android:text="Saturday 10am - 2pm"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/hour2_text"
                android:text="Sunday and Holidays 10am - 7:30pm"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/hour3_text"
                android:text="Delivery Fee: $1.00"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/marketplace_menu_items_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mp_text_container_layout" />


</LinearLayout>